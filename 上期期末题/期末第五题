#include <iostream>
using namespace std;

class str {
public:
	void scan()
	{
		cin >> st;
		for (int i = 0; st[i] != '\0'; i++)
		{
			a[st[i] - 'a']++;
		}
	}
	void sort()
	{
		int max = 27, maxnum = 0,ex;
		for (int i = 0; i < 26; i++)
		{
			for (int j = i; j < 26; j++)
			{
				if (a[j] < max)
				{
					max = a[j];
					maxnum = j;
				}
			}
			ex = a[maxnum];
			a[maxnum] = a[i];
			a[i] = ex;
			max = 27;
		}
	}
	void print()
	{
		for (int i = 0; i < 26; i++)
		{
			sum += a[i] * (i + 1);
		}
		cout << sum;
	}
private:
	int a[26] = {0};
	char st[100];
	int sum = 0;
};

int main()
{
	str st;
	st.scan();
	st.sort();
	st.print();
}
